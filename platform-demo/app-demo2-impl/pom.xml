    <dependencies>
        <dependency>
            <groupId>com.wenjay</groupId>
            <artifactId>wenjay-web</artifactId>
        </dependency>
        <dependency>
            <groupId>com.wenjay</groupId>
            <artifactId>wenjay-data</artifactId>
        </dependency>
        <dependency>
            <groupId>com.wenjay</groupId>
            <artifactId>wenjay-swagger</artifactId>
        </dependency>
        <dependency>
