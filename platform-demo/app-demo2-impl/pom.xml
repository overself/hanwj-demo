    <modelVersion>4.0.0</modelVersion>
    <groupId>com.wenjay</groupId>
    <artifactId>app-demo2-impl</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <parent>
        <artifactId>platform-demo</artifactId>
        <groupId>com.wenjay</groupId>
        <version>1.0.0-SNAPSHOT</version>
